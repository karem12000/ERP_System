<script>
    var timer;
    let Min = 60;


    function HandleSend() {
        var obj = new Object();
        let UserCode = $('#Code').val();
        obj["Username"] = UserCode;
        if (UserCode !== "") {
            $.post('@Url.GetAction("SendCode")', { 'para': obj }, function (res) {
                console.log(res);
                if (res.Status == true) {
                    $('#UserCode').fadeOut("slow", function () {
                        $('#UserCode').addClass('d-none');
                        $("#Text").html('تم إرسال رسالة إلكترونية تحتوي على رمز تحقق إلى الايميل');
                        $('#EmailCode').fadeIn("slow", function () {
                            HandleStartTimer();
                        });
                    });
                } else {
                    Swal.fire({
                        title: `${res.Message}`,
                        timer: 2000,
                        timerProgressBar: true,
                        icon: 'error',
                        showConfirmButton: false
                    });
                }
            });
        }
        else {
            Swal.fire({
                title: `من فضلك أدخل اسم المستخدم أو الإيميل`,
                timer: 2000,
                timerProgressBar: true,
                icon: 'warning',
                showConfirmButton: false
            });
        }
    }

    function HandleStartTimer() {
        Min = 60;
        $('.sectimerbtn').attr("disabled", "disabled");
        $('.sectimerbtn').html('');
        $('.sectimerbtn').html('<small id="SecTimer">60</small> ثانية لإعادة الإرسال');
        timer = setInterval(function () {
            if (Min === 1) {
                $('.sectimerbtn').removeAttr("disabled");
                $('.sectimerbtn').html("إعادة إرسال");
                $('.sectimerbtn').attr("onclick", "ReSendCode()");
                clearInterval(timer);
            }
            Min = Min - 1;
            $("#SecTimer").html(Min);
        }, 1000);
    }

    function HandleSendCode() {
        let Code = $("#ECode").val();
        let Password = $("#Password").val();
        let CPassword = $("#CPassword").val();
        let UserCode = $("#Code").val();
        var obj = new Object();
        obj["Username"] = UserCode;
        obj["NewPassword"] = Password;
        obj["Code"] = Code;
        if (Code !== "" && Password === CPassword) {
            Swal.fire({
                title: `من فضلك أدخل الكود`,
                timer: 2000,
                timerProgressBar: true,
                icon: 'warning',
                showConfirmButton: false
            });
        } else if (Password.trim() === CPassword.trim()) {
            Swal.fire({
                title: `تأكيد كلمة المرور غير متطابق`,
                timer: 2000,
                timerProgressBar: true,
                icon: 'warning',
                showConfirmButton: false
            });
        } else {
            $.post('@Url.GetAction("ForgetPassword")', { 'para': obj }, function (res) {
                if (res.Status) {
                    $('#UserCode').fadeOut("slow", function () {
                        $('#UserCode').addClass('d-none');
                        Swal.fire({
                            title: 'تم تغيير كلمة المرور بنجاح',
                            timer: 2000,
                            timerProgressBar: true,
                            icon: 'success',
                            showConfirmButton: false
                        }).then((result) => {
                            window.location.href = "/Account/login";
                        });
                    });

                } else {
                    Swal.fire({
                        title: `${res.Message}`,
                        timer: 2000,
                        timerProgressBar: true,
                        icon: 'error',
                        showConfirmButton: false
                    });
                }

            });
        }
    }

    function ReSendCode() {
        var obj = new Object();
        let UserCode = $('#Code').val();
        obj["Username"] = UserCode;
        if (UserCode !== "") {
            $.post('@Url.GetAction("SendCode")', { 'para': obj }, function (res) {
                if (res.Status == true) {
                    Swal.fire({
                        title: `تم إعادة إرسال الكود`,
                        timer: 1500,
                        timerProgressBar: true,
                        icon: 'success',
                        showConfirmButton: false
                    }).then(() => {
                        HandleStartTimer();
                    });
                } else {
                    Swal.fire({
                        title: `${res.Message}`,
                        timer: 2000,
                        timerProgressBar: true,
                        icon: 'error',
                        showConfirmButton: false
                    });
                }
            });
        }
        else {
            Swal.fire({
                title: `خطأ في إرسال الكود`,
                timer: 2000,
                timerProgressBar: true,
                icon: 'error',
                showConfirmButton: false
            });
        }
    }

</script>