@{
    Layout = "_Layout";
}
@model UserDTO;

<partial name="_Style" />
    <form id="frm" onsubmit="Submit()">

        <div class="row page-titles mx-0">
            <div class="col-12 p-0 m-0">
                @if (CurrentForm.CurrentFormPermissionActions.AddHasPermission || CurrentForm.CurrentFormPermissionActions.EditHasPermission)
                {
                    <div class="d-flex  justify-content-between align-items-center">
                        <h4 class="PageTitle">@CurrentForm.Title  </h4>
                        <div class="d-flex justify-content-between align-items-center gap-2">
                            <a class="AddBtn" href="#" onclick="AddNew(); return false;">
                                <div class="d-flex align-items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:svgjs="http://svgjs.com/svgjs" width="15" height="15" x="0" y="0" viewBox="0 0 469.333 469.333" style="enable-background:new 0 0 512 512" xml:space="preserve" class="hovered-paths"><g><g fill="#4caf50"><path d="M437.332 192H32c-17.664 0-32 14.336-32 32v21.332c0 17.664 14.336 32 32 32h405.332c17.664 0 32-14.336 32-32V224c0-17.664-14.336-32-32-32zm0 0" fill="#4caf50" data-original="#4caf50" class="hovered-path"></path><path d="M192 32v405.332c0 17.664 14.336 32 32 32h21.332c17.664 0 32-14.336 32-32V32c0-17.664-14.336-32-32-32H224c-17.664 0-32 14.336-32 32zm0 0" fill="#4caf50" data-original="#4caf50" class="hovered-path"></path></g></g></svg>
                                    اضافة
                                </div>


                            </a>
                            <a class="SaveBtn" onclick="Submit()" href="/">
                                <div class="d-flex align-items-center m-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:svgjs="http://svgjs.com/svgjs" width="15" height="15" x="0" y="0" viewBox="0 0 512 512" style="enable-background:new 0 0 512 512" xml:space="preserve" class=""><g><path d="M420.284 0H60C26.916 0 0 26.916 0 60v392c0 33.084 26.916 60 60 60h392c33.084 0 60-26.916 60-60V91.716zM157 40h119v76h40V40h40v96c0 11.028-8.972 20-20 20H177c-11.028 0-20-8.972-20-20zm239 432H117V296c0-11.028 8.972-20 20-20h239c11.028 0 20 8.972 20 20zm76-20c0 11.028-8.972 20-20 20h-16V296c0-33.084-26.916-60-60-60H137c-33.084 0-60 26.916-60 60v176H60c-11.028 0-20-8.972-20-20V60c0-11.028 8.972-20 20-20h57v96c0 33.084 26.916 60 60 60h159c33.084 0 60-26.916 60-60V40h7.716L472 108.284z" fill="#000000" data-original="#000000" class=""></path></g></svg>                            حفظ
                                </div>


                            </a>
                            <div class="form-check form-switch">
                                <input class="form-check-input" value="true" name="IsActive" id="IsActive" checked type="checkbox" role="switch">

                            </div>


                        </div>
                    </div>
                }
            </div>
            <div class=" col-12  m-0  CardDiv my-2">
                <input hidden name="id" id="id" value="" />
                <div class="w-100 d-flex flex-wrap align-items-end justify-content-center  mt-3 gap-3">

                    <div class="form-group  min-w-2">
                        <label class="lable" for="userName"> اسم المستخدم</label>

                        <input id="userName" name="userName" class="form-control NameInput" value="" />
                    </div>
                    <div class="form-group  min-w-2">
                        <label class="lable" for="email">البريد الالكتروني</label>

                        <input id="email" name="email" class="form-control NameInput" value="" />
                    </div>

                    <div class="form-group min-w-2 d-flex flex-column">
                        <label class="lable" for="UserTypeId">اختر نوع المستخدم</label>

                        <select class="Select sAddress form-select"
                                aria-label="اختر نوع المستخدم"
                                asp-items='new SelectList((IEnumerable<SelectListDTO>)ViewData["UserTypes"], "Value", "Text")'
                                name="UserTypeId" id="UserTypeId">
                            <option selected value="0">اختر نوع المستخدم</option>
                        </select>

                    </div>

                    <div class="form-group min-w-2 d-flex flex-column">
                        <label class="lable" for="ddlBranchs">اختر الفروع</label>

                        <select class="js-example-rtl Select sAddress form-select"
                                aria-label="اختر الفروع"
                                asp-items='new SelectList((IEnumerable<SelectListDTO>)ViewData["Branches"], "Value", "Text")'
                                name="BranchIds" id="ddlBranchs" multiple="multiple">
                        </select>

                    </div>

                    <div class="form-group min-w-2 d-flex flex-column">
                        <label class="lable" for="ddlFocusTypes">اختر أنواع البؤر</label>

                        <select class="js-example-rtl Select sAddress form-select"
                                aria-label="اختر أنواع البؤر"
                                asp-items='new SelectList((IEnumerable<SelectListDTO>)ViewData["FocusTypes"], "Value", "Text")'
                                name="FocusTypeIds" id="ddlFocusTypes" multiple="multiple">
                        </select>

                    </div>

                </div>
            </div>
        </div>

   
    </form>
    @if (CurrentForm.CurrentFormPermissionActions.ShowHasPermission)
    {


        <partial name="_DataTable" />
    }
    @section Scripts
    {

        <partial name="_Scripts" />
    }
