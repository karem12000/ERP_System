		SaleInvoiceId.val(obj.ID);
		InvoiceTotalPrice.val(obj.InvoiceTotalPrice);
		InvoiceTotalDiscount.val(obj.InvoiceTotalDiscount);
		TotalPaid.val(obj.TotalPaid);
