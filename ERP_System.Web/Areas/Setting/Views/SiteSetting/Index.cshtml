@{
    Layout = "_Layout";
}
@model ERP_System.Tables.Setting;
@if (CurrentForm.CurrentFormPermissionActions.ShowHasPermission)
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">إعدادات الموقع</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <form class="form form-horizontal" id="frm" onsubmit="Submit()">
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-8">
                                        <div class="form-group">
                                            <input type="text" hidden value="@Model.ID" name="id" id="id"/>
                                            <label for="Name">اسم الموقع</label>
                                            <input type="text" id="SiteName" value="@Model.SiteName" name="SiteName"  class="form-control" placeholder="اسم الموقع">
                                        </div>
                                    </div>
                                    
                                    <div class="col-8">
                                        <div class="form-group">
                                            <label for="Name">اللوجو</label>
                                            <input type="file" onchange="file_changed()" id="Logo" name="Logo" accept=".jpg, .jpeg, .png" class="form-control" placeholder="لوجو الموقع">
                                            <img style="width: 200px;height: 200px;margin-top: 15px;display: none;" id="img">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 d-flex justify-content-between">
                                        <button type="button" class="btn btn-primary me-1 mb-1" onclick="Submit()">
                                            حفظ
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts
    {

    <partial name="_Scripts" />
}